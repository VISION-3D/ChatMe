{
  "version": 2,
  "name": "chatme-app",
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/build",
  "installCommand": "cd frontend && npm install", 
  "framework": "create-react-app",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://api.chatme-app.com",
    "REACT_APP_SOCKET_URL": "wss://chatme-socket.com"
  }
}